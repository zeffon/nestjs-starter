{
  "apps": [
    {
      "env": {
        "NODE_ENV": "production",
        "PORT": 12000
      },
      "name": "nestjs-starter",
      "script": "/app/nestjs-starter/dist/main.js",
      "instances": 1,
      "cwd": "/app/nestjs-startere",
      "error_file": "./logs/pm2/error.log",
      "out_file": "./logs/pm2/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "watch": ["dist"],
      "ignore_watch": ["node_modules", "test", ".vscode"]
    }
  ]
}
